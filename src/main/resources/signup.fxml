<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="anchorPane" prefHeight="588.0" prefWidth="911.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.trombonafide.SignupController">

   <children>
      <VBox fx:id="centerVBox" alignment="CENTER" spacing="15" style="-fx-padding: 30;" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">

          
          <Label style="-fx-font-size: 40; -fx-background-color: transparent; -fx-text-fill: yellow; -fx-font-weight: bold;" text="Create a New Account">
            <padding>
               <Insets bottom="5.0" left="10.0" right="10.0" top="10.0" />
            </padding>
         </Label>
      
          <TextField fx:id="firstNameField" maxWidth="-Infinity" prefHeight="30.0" prefWidth="350.0" promptText="First Name" style="-fx-background-color: yellow; -fx-prompt-text-fill: black;">
            <font>
               <Font size="15.0" />
            </font></TextField>
          <TextField fx:id="lastNameField" maxWidth="-Infinity" prefHeight="30.0" prefWidth="350.0" promptText="Last Name" style="-fx-background-color: yellow; -fx-prompt-text-fill: black;">
            <font>
               <Font size="15.0" />
            </font></TextField>
          <TextField fx:id="usernameField" maxWidth="-Infinity" prefHeight="30.0" prefWidth="350.0" promptText="Username" style="-fx-background-color: yellow; -fx-prompt-text-fill: black;">
            <font>
               <Font size="15.0" />
            </font></TextField>
          <PasswordField fx:id="passwordField" maxWidth="-Infinity" prefHeight="30.0" prefWidth="350.0" promptText="Password" style="-fx-background-color: yellow; -fx-prompt-text-fill: black;">
            <font>
               <Font size="15.0" />
            </font></PasswordField>
          <TextField fx:id="emailField" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="30.0" prefWidth="350.0" promptText="Email" style="-fx-background-color: yellow; -fx-prompt-text-fill: black;">
            <font>
               <Font size="15.0" />
            </font></TextField>
      
          <Button maxHeight="-Infinity" maxWidth="-Infinity" onAction="#handleCreateAccount" prefHeight="30.0" prefWidth="150.0" styleClass="button" text="Create Account">
            <VBox.margin>
               <Insets bottom="10.0" top="5.0" />
            </VBox.margin></Button>
          <Button maxHeight="-Infinity" maxWidth="-Infinity" onAction="#handleBackToLogin" prefHeight="30.0" prefWidth="150.0" styleClass="button" text="Back to Login">
               <VBox.margin>
                  <Insets bottom="10.0" />
               </VBox.margin>
          </Button>
      
          <Label fx:id="errorLabel" textFill="red" />
      </VBox>
   </children>
</AnchorPane>
