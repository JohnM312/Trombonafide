<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.*?>
<?import javafx.scene.shape.Rectangle?>

<AnchorPane fx:id="rootPane" xmlns="http://javafx.com/javafx/11.0.1" 
            xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="com.trombonafide.PlayController"
            style="-fx-background-color: black;">
    
    <!-- Background that stretches to full screen -->
    <Rectangle fx:id="background" fill="black" AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"/>

    <!-- Vertical Slider for user pitch control -->
    <Slider fx:id="pitchSlider" layoutX="50" layoutY="50" orientation="VERTICAL" prefHeight="300" min="0" max="100"/>

    <!-- Label showing current score -->
    <Label fx:id="scoreLabel" layoutX="50" layoutY="20" style="-fx-font-size: 18; -fx-text-fill: white;" text="Score: 0"/>

    <!-- "Back to Library" button -->
    <Button layoutX="500" layoutY="350" text="Back" onAction="#handleBackToLibrary"/>

</AnchorPane>
