<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.trombonafide.HomeController"
      alignment="CENTER"
      spacing="20">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Welcome to Trombonafide!" font="$x1">
        <font>
            <Font size="24.0" />
        </font>
    </Label>

    <Button text="Library" onAction="#goToLibrary"/>
    <Button text="Lessons" onAction="#goToLessons"/>
    <Button text="Profiles" onAction="#goToProfiles"/>
</VBox>