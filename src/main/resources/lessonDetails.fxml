<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.*?>

<VBox xmlns="http://javafx.com/javafx/11.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.trombonafide.LessonDetailController"
      alignment="CENTER" spacing="20" style="-fx-padding: 30;">
    
    <Label fx:id="lessonTitleLabel" style="-fx-font-size: 18;" wrapText="true"/>
    <TextArea fx:id="lessonContentArea" editable="false" wrapText="true" prefHeight="200" prefWidth="300"/>
    
    <Button text="Start Lesson" onAction="#handleStartLesson"/>
    <Button text="Back to Lessons" onAction="#handleBackToLessons"/>
</VBox>
