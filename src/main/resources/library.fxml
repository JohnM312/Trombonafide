<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17" 
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.trombonafide.LibraryController"
      spacing="20"
      style="-fx-padding: 20;">
    
    <HBox alignment="CENTER" spacing="10">
        <Button text="Back" onAction="#handleBack"/>
        <Label text="Song Library" style="-fx-font-size: 24; -fx-font-weight: bold;"/>
        <Button text="Play Selected" onAction="#handlePlaySelected"/>
        <Button text="Stop" onAction="#handleStop"/>
    </HBox>
    
    <TableView fx:id="songsTable" style="-fx-max-width: 800;">
        <columns>
            <TableColumn fx:id="titleColumn" text="Title" prefWidth="250"/>
            <TableColumn fx:id="artistColumn" text="Artist" prefWidth="200"/>
            <TableColumn fx:id="genreColumn" text="Genre" prefWidth="150"/>
            <TableColumn fx:id="difficultyColumn" text="Difficulty" prefWidth="100"/>
        </columns>
    </TableView>
</VBox>